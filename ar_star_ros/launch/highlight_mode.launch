<launch>
  <!-- load highlight mode params -->
  <rosparam file="$(find ar_star_ros)/params/highlight_mode.yaml" command="load"/>
  
  <!--launch robofleet with desired config file-->
  <arg name="config_file" value="$(find ar_star_ros)/../config/ar_star_rf_client_config.yaml"/>
	<node
		name    = "robofleet_client"
		pkg     = "robofleet_client"
		type    = "client"
		output  = "screen"
		args	  = "$(arg config_file)"
	/>

  <!-- Launch the service server -->
  <node pkg="ar_star_ros" type="highlight_solver" name="highlight_solver" output="screen" />

  <!-- Launch the service client -->
  <node pkg="ar_star_ros" type="highlight_listener" name="highlight_listener" output="screen" />
</launch>